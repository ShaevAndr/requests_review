generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Request {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  status     Statuses @default(active) @map("status")
  message    String
  comment    String?
  created_at DateTime @default(now())
  updated_at Int?
  ip         String
}

model User {
  email    String   @id @unique
  password String
  session  Session?
}

model Session {
  session    String @id @unique
  user       User   @relation(fields: [user_email], references: [email])
  user_email String @unique
}

enum Statuses {
  active
  resolved
}
